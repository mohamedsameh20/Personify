{
  "scoring_algorithm": {
    "version": "1.0",
    "method": "weighted_average",
    "normalization": "z_score",
    "confidence_calculation": "bootstrap"
  },
  "trait_weights": {
    "openness": {
      "base_weight": 1.0,
      "facet_weights": {
        "imagination": 0.2,
        "artistic_interests": 0.15,
        "emotionality": 0.15,
        "adventurousness": 0.2,
        "intellect": 0.2,
        "liberalism": 0.1
      },
      "question_type_modifiers": {
        "behavioral": 1.0,
        "situational": 0.9,
        "preference": 0.8,
        "hypothetical": 0.7
      }
    },
    "conscientiousness": {
      "base_weight": 1.0,
      "facet_weights": {
        "self_efficacy": 0.15,
        "orderliness": 0.2,
        "dutifulness": 0.15,
        "achievement_striving": 0.2,
        "self_discipline": 0.2,
        "cautiousness": 0.1
      },
      "question_type_modifiers": {
        "behavioral": 1.0,
        "situational": 1.0,
        "preference": 0.8,
        "hypothetical": 0.6
      }
    },
    "extraversion": {
      "base_weight": 1.0,
      "facet_weights": {
        "friendliness": 0.2,
        "gregariousness": 0.2,
        "assertiveness": 0.15,
        "activity_level": 0.15,
        "excitement_seeking": 0.15,
        "cheerfulness": 0.15
      },
      "question_type_modifiers": {
        "behavioral": 1.0,
        "situational": 0.9,
        "preference": 0.9,
        "hypothetical": 0.7
      }
    },
    "agreeableness": {
      "base_weight": 1.0,
      "facet_weights": {
        "trust": 0.15,
        "morality": 0.15,
        "altruism": 0.2,
        "cooperation": 0.2,
        "modesty": 0.15,
        "sympathy": 0.15
      },
      "question_type_modifiers": {
        "behavioral": 1.0,
        "situational": 1.0,
        "preference": 0.8,
        "hypothetical": 0.8
      }
    },
    "neuroticism": {
      "base_weight": 1.0,
      "facet_weights": {
        "anxiety": 0.2,
        "anger": 0.15,
        "depression": 0.2,
        "self_consciousness": 0.15,
        "immoderation": 0.15,
        "vulnerability": 0.15
      },
      "question_type_modifiers": {
        "behavioral": 1.0,
        "situational": 0.9,
        "preference": 0.7,
        "hypothetical": 0.6
      }
    }
  },
  "response_scaling": {
    "likert_5": {
      "1": 0.0,
      "2": 0.25,
      "3": 0.5,
      "4": 0.75,
      "5": 1.0
    },
    "likert_7": {
      "1": 0.0,
      "2": 0.167,
      "3": 0.333,
      "4": 0.5,
      "5": 0.667,
      "6": 0.833,
      "7": 1.0
    }
  },
  "reliability_adjustments": {
    "min_questions_per_trait": 8,
    "reliability_coefficient": {
      "excellent": 0.9,
      "good": 0.8,
      "acceptable": 0.7,
      "questionable": 0.6,
      "poor": 0.5
    },
    "confidence_intervals": {
      "high_confidence": {
        "min_questions": 15,
        "confidence_level": 0.95
      },
      "medium_confidence": {
        "min_questions": 10,
        "confidence_level": 0.90
      },
      "low_confidence": {
        "min_questions": 5,
        "confidence_level": 0.85
      }
    }
  },
  "mbti_conversion": {
    "E_I": {
      "source_trait": "extraversion",
      "threshold": 0.5,
      "confidence_weight": 0.8
    },
    "S_N": {
      "calculation": "complex",
      "primary_trait": "openness",
      "secondary_trait": "conscientiousness",
      "formula": "(openness * 0.7) + ((1 - conscientiousness) * 0.3)",
      "threshold": 0.4
    },
    "T_F": {
      "source_trait": "agreeableness",
      "threshold": 0.5,
      "reverse": false,
      "confidence_weight": 0.7
    },
    "J_P": {
      "source_trait": "conscientiousness", 
      "threshold": 0.5,
      "confidence_weight": 0.8
    }
  },
  "adaptive_testing": {
    "enabled": true,
    "uncertainty_threshold": 0.3,
    "confidence_threshold": 0.8,
    "max_questions": 200,
    "min_questions": 40,
    "trait_balance_factor": 0.2,
    "difficulty_adaptation": {
      "easy_threshold": 0.7,
      "hard_threshold": 0.3,
      "adjustment_factor": 0.1
    }
  },
  "validation_rules": {
    "consistency_checks": {
      "min_correlation": 0.6,
      "max_contradictions": 3,
      "warning_threshold": 2
    },
    "response_patterns": {
      "detect_straightlining": true,
      "detect_extreme_responding": true,
      "detect_midpoint_bias": true,
      "pattern_threshold": 0.8
    },
    "time_validation": {
      "min_time_per_question": 2,
      "max_time_per_question": 120,
      "speed_warning_threshold": 1.5
    }
  },
  "character_matching": {
    "similarity_algorithm": "weighted_euclidean",
    "trait_importance": {
      "openness": 1.0,
      "conscientiousness": 1.0,
      "extraversion": 0.9,
      "agreeableness": 0.8,
      "neuroticism": 0.7
    },
    "facet_importance": {
      "creativity": 1.2,
      "leadership": 1.1,
      "emotional_stability": 1.1,
      "social_skills": 1.0,
      "organization": 0.9
    },
    "matching_thresholds": {
      "excellent": 0.9,
      "very_good": 0.8,
      "good": 0.7,
      "moderate": 0.6,
      "poor": 0.5
    }
  },
  "insight_generation": {
    "strength_thresholds": {
      "very_high": 0.8,
      "high": 0.65,
      "moderate": 0.5,
      "low": 0.35,
      "very_low": 0.2
    },
    "combination_insights": {
      "high_openness_high_conscientiousness": "creative_achiever",
      "high_extraversion_high_agreeableness": "social_leader",
      "low_neuroticism_high_conscientiousness": "stable_performer",
      "high_openness_low_agreeableness": "independent_thinker",
      "high_agreeableness_high_conscientiousness": "reliable_helper"
    },
    "development_areas": {
      "threshold": 0.3,
      "priority_weights": {
        "skill_building": 1.0,
        "awareness": 0.8,
        "practice": 0.9,
        "support": 0.7
      }
    }
  },
  "cultural_adjustments": {
    "enabled": false,
    "regions": {
      "western": {
        "individualism_bias": 1.0,
        "extraversion_weight": 1.0,
        "achievement_weight": 1.0
      },
      "eastern": {
        "collectivism_bias": 1.0,
        "harmony_weight": 1.1,
        "modesty_weight": 1.1
      }
    }
  },
  "research_parameters": {
    "data_collection": {
      "store_anonymized": true,
      "include_demographics": false,
      "track_completion_times": true
    },
    "norm_groups": {
      "general_population": "default",
      "students": "academic_adjusted",
      "professionals": "career_focused"
    }
  }
}
